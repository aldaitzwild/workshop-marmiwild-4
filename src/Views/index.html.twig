<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>List of Recipes</title>
    </head>
    <body>
        <a href="/add">Add</a>
        <h1>List of Recipes</h1>
        <ul>
            {% for recipe in recipes %}
            <li>
                <a href="show?id={{ recipe.id }}">
                    {{ recipe.title }}
                </a>
            </li>
            {% endfor %}
        </ul>
    </body>
</html>
